    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug npc",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/npc/npc.go",
            "args": [
                "-server=your-server-host:8024",
                "-vkey=your-vkey",
                "-disconnect_timeout=60"
            ],
            "env": {
                "NPC_CLIENT_ID": "your-client-id",
                "NPC_ENCRYPT_PUBLIC_KEY": "your-rsa-public-key-base64-data"
            }
        }
    ]
}